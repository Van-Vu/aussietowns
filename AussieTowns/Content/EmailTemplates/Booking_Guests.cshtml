@model AussieTowns.ViewModel.BookingEmailViewModel

<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
</head>
<body>
    <table style="background-color: #f8f8f8; border: 0; padding: 0; height: 100%; width: 100%;">
        <tr>
            <td style="padding: 15px; text-align: center; vertical-align: top; border:1px solid #e8e8e8;font-family: 'Karla', sans-serif; color: #000000;">
                <table style="background-color:#ffffff; max-width: 600px; padding:0; border: 0; text-align: center; margin-left:auto; margin-right: auto;">
                    <tbody>
                        <tr>
                            <td style="padding:5px;">
                                <a href="http://google.com.au" target="_blank">
                                    <img style="display: block; border: 0;" width="60" height="60" src="https://s3-ap-southeast-2.amazonaws.com/meetthelocal-development/images/www/logo.png" alt="Meet the Local" title="Meet the Local" />
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td style="padding: 10px 20px 20px 20px; line-height: 24px;">
                                <div style="font-size:24px; text-align: center; margin-bottom: 30px;">
                                    <strong>@Model.EmailHeader</strong>
                                </div>
                                <div>
                                    Below is the details
                                </div>
                                <div style="width: 100%;text-align: left;">
                                    <a href="@Model.ListingUrl">@Model.ListingHeader</a>
                                    <div>@Model.ListingDescription</div>
                                </div>
                                <div style="width: 100%; text-align: left;">
                                    <table>
                                        <tr>
                                            <td>Booking date</td>
                                            <td>@Model.BookingDate</td>
                                        </tr>
                                        <tr>
                                            <td>Booking time</td>
                                            <td>@Model.BookingTime</td>
                                        </tr>
                                    </table>
                                </div>
                                <div>
                                    Contact details:
                                </div>
                                <div style="width: 100%">
                                    <table style="width: 70%; border:0; margin-top:40px; margin-bottom: 40px; margin-left: auto; margin-right: auto;">
                                        <tbody>
                                            <tr>
                                                <td>Full name</td>
                                                <td>Date of Birth</td>
                                                <td>Email</td>
                                                <td>Phone</td>
                                            </tr>
                                            @foreach (var item in Model.BookingParticipants)
                                            {
                                                <tr>
                                                    <td>@item.Fullname</td>
                                                    <td>@item.DateOfBirth</td>
                                                    <td>@item.Email</td>
                                                    <td>@item.Phone</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <div>
                                    <p>
                                        <span> Welcome to the Amazon Web Services community!</span>
                                        <br />
                                        <br /> —The Amazon Web Services Team
                                    </p>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <img style="display: block;" width="600" height="235" alt="footer" title="footer" src="https://s3-ap-southeast-2.amazonaws.com/meetthelocal-development/images/www/footer_green.png" />
                            </td>
                        </tr>
                    </tbody>
                </table>
            </td>
        </tr>
        <tr>
            <td align="center" valign="top">
                {accountaddress},
                <a href="{unsubscribe}">Unsubscribe</a>.
            </td>
        </tr>
    </table>
</body>
</html>

