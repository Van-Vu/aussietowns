@model FunWithLocal.WebApi.ViewModel.WelcomeEmailViewModel
<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <style>
        .confirmEmail {
            text-decoration: none;
            background-color: #99CD4E;
            color: #ffffff;
            text-align: center;
            border-radius: 50px 50px;
            box-shadow: none;
            border: 0;
            font-size: 24px;
            margin: 30px 5px;
        }

         @@media screen and (min-width:412px) {
            .confirmEmail {
                padding: 15px 45px;
            }
        }
        @@media screen and (max-width:411px) {
            .confirmEmail {
                padding: 10px 10px;
            }
        }


        .confirmEmail:hover {
            background-color: transparent;
            color: #99CD4E;
            box-shadow: 0 0 0 1px #99CD4E, 0 0 0 1px #99CD4E;
            transition: all 0.3s ease-in-out;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <table style="background-color: #f8f8f8; border: 0; padding: 0; height: 100%; width: 100%;">
        <tr>
            <td style="padding: 15px; text-align: center; vertical-align: top; border:1px solid #e8e8e8;font-family: 'Helvetica', sans-serif; color: #000000;">
                <table style="background-color:#ffffff; max-width: 600px; padding:0; border: 0; text-align: center; margin-left:auto; margin-right: auto;">
                    <tbody>
                        <tr>
                            <td style="padding:5px;">
                                <a href="https://www.funwithlocal.com" target="_blank">
                                    <img style="display: block; border: 0;" width="170" height="70" src="https://www.funwithlocal.com/static/images/logo.png" alt="Fun With Local" title="Fun With Local" />
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td style="padding: 10px 20px 20px 20px; line-height: 24px;">
                                <div style="font-size:24px; text-align: center; margin-bottom: 30px;">
                                    <strong>Welcome to Fun With Local</strong>
                                </div>
                                <div>
                                    Thank you for creating a Fun With Local(FWL) account. Please click the link below to confirm your email.
                                </div>
                                <div style="margin: 30px 0;">
                                    <a class="confirmEmail" href="@Model.EmailConfirmationToken" target="_blank">Confirm your email</a>
                                </div>
                                <div>
                                    <br /> - The Locals Team
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </td>
        </tr>
        <tr>
            <td align="center" valign="top">
                <a href="{unsubscribe}">Unsubscribe</a>.
            </td>
        </tr>
    </table>
</body>
</html>
